{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist/debugger",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "noImplicitAny": true
  },
  "include": [
    "./src/debugger/*.ts" // include debugger *.ts files
  ],
  "exclude": [
    "./src/debugger/node_modules",
  ]
}