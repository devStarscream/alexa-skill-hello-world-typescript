{
  "name": "alexa-skill-hello-world-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "pre-build": "npm run clean && gulp && cd dist/custom && npm i && cd ../..",
    "build": "npm run clean && npm run test:coverage && gulp",
    "deploy": "npm run pre-build && ask deploy --profile dev-starscream",
    "deploy:lambda": "npm run build && ask deploy --profile dev-starscream --target lambda",
    "deploy:local": "ask deploy --target skill --profile dev-starscream",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "nodemon"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "coverageDirectory": ".coverage"
  },
  "author": "Mihail Cristian Dumitru",
  "license": "MIT",
  "dependencies": {
    "ask-sdk-core": "^2.12.1",
    "ask-sdk-model": "^1.40.0",
    "i18next": "^22.4.6",
    "i18next-sprintf-postprocessor": "^0.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/i18next": "^8.4.6",
    "@types/i18next-sprintf-postprocessor": "^0.2.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "ask-sdk-local-debug": "^1.1.0",
    "express": "^4.18.2",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
