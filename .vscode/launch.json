    "version": "0.2.0",
    "configurations": [
        {
            "name": "Alexa Skill (Node)",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "npm: pre-build",
            "program": "${command:ask.debugAdapterPath}",
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/dist/custom/**/*.js"
            ],
            "args": [
                "--accessToken",
                "${command:ask.accessToken}",
                "--skillId",
                "${command:ask.skillIdFromWorkspace}",
                "--handlerName",
                "handler",
                "--skillEntryFile",
                "${workspaceFolder}/dist/custom/index.js",
                "--region",
                "EU"
            ],
            "cwd": "${workspaceFolder}/dist/custom"
        },
        {
            "name": "Alexa Skill (Ts)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/debugger",
            "program": "${workspaceFolder}/src/debugger/index.ts",
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/dist/debugger/*.js"
            ],
            "args": [
                "--accessToken",
                "${command:ask.accessToken}",
                "--skillId",
                "${command:ask.skillIdFromWorkspace}",
                "--handlerName",
                "handler",
                "--skillEntryFile",
                "${workspaceFolder}/dist/debugger/index.js",
                "--region",
                "EU"
            ]
        }
    ]
}